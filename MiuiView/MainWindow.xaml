            <ParallelTimeline RepeatBehavior = "Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetName="GdPoints" Storyboard.TargetProperty= "Opacity"
                                 BeginTime= "0:0:0" Duration= "0:0:0.2" From= "0" To= "1" />
                <DoubleAnimation Storyboard.TargetName= "GdPoints" Storyboard.TargetProperty= "Opacity"
                                 BeginTime= "0:0:0.4" Duration= "0:0:0.2" From= "1" To= "0" />
            </ParallelTimeline >

            <DoubleAnimation Storyboard.TargetName="PathLeftUp" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="-2.2"/>
            <DoubleAnimation Storyboard.TargetName="PathRightUp" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="2.2"/>

            <DoubleAnimation Storyboard.TargetName="PathLeftBottom" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="-2"/>
            <DoubleAnimation Storyboard.TargetName="PathRightBottom" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="2"/>
            <DoubleAnimation Storyboard.TargetName="MyUnderLine" Storyboard.TargetProperty="X"
                             Duration="0:0:1" RepeatBehavior="Forever" AutoReverse="True" To="5"/>

            <DoubleAnimation Storyboard.TargetName="PathBdrLeft" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="-2"/>
            <DoubleAnimation Storyboard.TargetName="PathBdrRight" Storyboard.TargetProperty="StrokeDashOffset"
                             Duration="0:0:2" RepeatBehavior="Forever" AutoReverse="False" To="2"/>

            <ParallelTimeline RepeatBehavior = "Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetName="PathBgLeft" Storyboard.TargetProperty= "Opacity"
                                 BeginTime= "0:0:0" Duration= "0:0:0.8" From= "0" To= "1" />
                <DoubleAnimation Storyboard.TargetName= "PathBgLeft" Storyboard.TargetProperty= "Opacity"
                                 BeginTime= "0:0:0.8" Duration= "0:0:0.8" From= "1" To= "0" />
            </ParallelTimeline >

            <ParallelTimeline RepeatBehavior = "Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetName="PathBgRight" Storyboard.TargetProperty= "Opacity"
                                 BeginTime= "0:0:0" Duration= "0:0:0.8" From= "0" To= "1" />
